@model Prueba.Models.Doctor

@{
    ViewData["Title"] = "Detalles del Médico";
}

<h1>Detalles del Médico</h1>

<div>
    <h4>Médico @Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">Documento</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NationalId)</dd>
        
        <dt class="col-sm-2">Especialidad</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Speciality)</dd>

        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>

        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>